# =====================================================
# Sudal - Social Quiz Platform
# Environment Variables Configuration Template
# =====================================================
# Legend:
# [REQUIRED] - Required for the application to function properly
# [OPTIONAL] - Optional configuration
# [ENV:xxx]  - Required only in specific environments (dev, canary, production)
# =====================================================
# Note: Copy this file to .env for local development
# For production/canary, create .env.production or .env.canary
# These environment-specific files should NOT be committed to version control
# =====================================================

# Application Environment
# -----------------------------------------------------
APP_ENV=dev  # [REQUIRED] Options: dev, canary, production

# Server Configuration
# -----------------------------------------------------
SERVER_PORT=8080  # [REQUIRED] Note: PORT is also supported for Cloud Run compatibility
LOG_LEVEL=info    # [REQUIRED] Options: debug, info, warn, error

# Database Configuration
# -----------------------------------------------------
# You can either set POSTGRES_DSN directly or use the individual components
# POSTGRES_DSN=postgres://user:password@localhost:5432/quizapp_db?sslmode=disable  # [ENV:production]

# Or use individual components (recommended):
DB_HOST=localhost      # [ENV:production]
DB_PORT=5432           # [OPTIONAL] Default: 5432
DB_USER=user           # [ENV:production]
DB_PASSWORD=password   # [ENV:production]
DB_NAME=quizapp_db     # [ENV:production]
DB_SSLMODE=disable     # [OPTIONAL] Default: disable, Options: disable, require, verify-ca, verify-full

# Redis Configuration
# -----------------------------------------------------
# You can either set REDIS_ADDR directly or use the individual components
REDIS_ADDR=localhost:6379  # [ENV:production]

# Or use individual components:
REDIS_HOST=localhost   # [ENV:production] if REDIS_ADDR not set
REDIS_PORT=6379        # [OPTIONAL] Default: 6379
REDIS_PASSWORD=        # [OPTIONAL]

# Firebase Configuration
# -----------------------------------------------------
FIREBASE_PROJECT_ID=your-firebase-project-id  # [ENV:production]
# Path to Firebase service account credentials JSON file
FIREBASE_CREDENTIALS_JSON=./configs/firebase-credentials.json  # [ENV:production]

# JWT Configuration
# -----------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key  # [ENV:production]
